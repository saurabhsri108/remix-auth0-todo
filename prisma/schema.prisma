generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("PLANETSCALE_DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Task {
  id          Int      @id @default(autoincrement())
  description String
  completed   Boolean
  date        DateTime @default(now())
}
